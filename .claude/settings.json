{
  "permissions": {
    "allow": [
      "Bash",
      "Edit",
      "Write",
      "WebSearch",
      "Skill(/ship:*)",
      "Skill(/test:*)",
      "Skill(/commit:*)"
    ],
    "deny": [
      "Bash(git push --force:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean:*)",
      "Bash(dotnet nuget push:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(Invoke-WebRequest:*)",
      "Bash(chmod 777:*)",
      "Bash(sudo:*)",
      "Bash(su:*)",
      "Bash(ppds data truncate:*)"
    ],
    "ask": [
      "Bash(git merge:*)",
      "Bash(git reset:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git revert:*)",
      "Bash(git apply:*)",
      "Bash(git am:*)",
      "Bash(git tag -d:*)",
      "Bash(git tag -fa:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr close:*)",
      "Bash(gh issue close:*)",
      "Bash(gh release create:*)",
      "Bash(gh repo create:*)",
      "Bash(gh repo delete:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash(git commit:*)",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 .claude/hooks/pre-commit-validate.py",
            "timeout": 120
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "py -3 .claude/hooks/ralph-hook.py",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
